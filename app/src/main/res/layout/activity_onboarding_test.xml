<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_white"
    tools:context=".OnboardingTestActivity">

    <!-- =================================================================== -->
    <!-- Top Bar: Progress and Skip (Visible only during questions)          -->
    <!-- =================================================================== -->
    <!-- NOTE: Ensure your @drawable/custom_progress_bar uses @color/app_primary for its progress tint -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="50dp"
        android:progressDrawable="@drawable/custom_progress_bar"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@id/tvProgressCounter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:progress="20"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvProgressCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="gilroy"
        android:textColor="@color/app_primary"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/progressBar"
        app:layout_constraintEnd_toStartOf="@id/btnSkip"
        app:layout_constraintTop_toTopOf="@id/progressBar"
        tools:text="1/5"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/btnSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:background="?attr/selectableItemBackground"
        android:fontFamily="gilroy_bold"
        android:padding="8dp"
        android:text="Skip"
        android:textColor="@color/app_primary"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/progressBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/progressBar"
        tools:visibility="visible" />


    <!-- =================================================================== -->
    <!-- GROUP 1: INTRO VIEW (Visible by default)                            -->
    <!-- =================================================================== -->
    <LinearLayout
        android:id="@+id/introGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/btnNext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone"> <!-- Hide in preview to see other states -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="gilroy_bold"
            android:letterSpacing="0.03"
            android:text="Let's Get Started"
            android:textColor="@color/app_dark_grey"
            android:textSize="24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="16dp"
            android:fontFamily="gilroy"
            android:gravity="center"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="4dp"
            android:text="This quick assessment will help us personalize your journey. Answer honestly to get the best results."
            android:textColor="@color/app_grey"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- =================================================================== -->
    <!-- GROUP 2: QUESTION VIEW                                              -->
    <!-- =================================================================== -->
    <ScrollView
        android:id="@+id/questionGroup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:clipToPadding="false"
        android:paddingBottom="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/btnNext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progressBar"
        tools:visibility="visible"> <!-- Set to visible to design cards in preview -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp">

            <TextView
                android:id="@+id/tvQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="gilroy_bold"
                android:gravity="center"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="6dp"
                android:textColor="@color/app_dark_grey"
                android:textSize="24sp"
                tools:text="On a scale of 1-5, how would you rate your current stress levels?" />

            <LinearLayout
                android:id="@+id/optionsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardOption1"
                    style="@style/Widget.App.OnboardingCard">
                    <TextView android:id="@+id/tvOptionText1" style="@style/Widget.App.OnboardingCardText" tools:text="Option 1" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardOption2"
                    style="@style/Widget.App.OnboardingCard">
                    <TextView android:id="@+id/tvOptionText2" style="@style/Widget.App.OnboardingCardText" tools:text="Option 2" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardOption3"
                    style="@style/Widget.App.OnboardingCard">
                    <TextView android:id="@+id/tvOptionText3" style="@style/Widget.App.OnboardingCardText" tools:text="Option 3" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardOption4"
                    style="@style/Widget.App.OnboardingCard">
                    <TextView android:id="@+id/tvOptionText4" style="@style/Widget.App.OnboardingCardText" tools:text="Option 4" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardOption5"
                    style="@style/Widget.App.OnboardingCard">
                    <TextView android:id="@+id/tvOptionText5" style="@style/Widget.App.OnboardingCardText" tools:text="Option 5" />
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <!-- =================================================================== -->
    <!-- GROUP 3: SUMMARY VIEW                                               -->
    <!-- NOTE: Requires Lottie dependency and a lottie file in res/raw -->
    <!-- =================================================================== -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/summaryGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/app_white"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/app_light_grey"
        app:strokeWidth="1dp"
        tools:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="32dp">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/summaryAnimation"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="false"
                app:lottie_rawRes="@raw/loading_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="gilroy_bold"
                android:letterSpacing="0.03"
                android:text="Your journey is ready!"
                android:textColor="@color/app_dark_grey"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="gilroy"
                android:gravity="center"
                android:letterSpacing="0.02"
                android:text="We've created a personalized plan to help you achieve your goals."
                android:textColor="@color/app_grey"
                android:textSize="14sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewPlan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="gilroy_bold"
                android:paddingVertical="14dp"
                android:text="View My Plan"
                android:textColor="@color/app_white"
                android:textSize="16sp"
                app:backgroundTint="@color/app_primary"
                app:cornerRadius="8dp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- =================================================================== -->
    <!-- Bottom Navigation Button                                            -->
    <!-- =================================================================== -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="24dp"
        android:elevation="4dp"
        android:fontFamily="gilroy_bold"
        android:paddingVertical="16dp"
        android:text="Start Assessment"
        android:textColor="@color/app_white"
        android:textSize="16sp"
        app:backgroundTint="@color/app_primary"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>