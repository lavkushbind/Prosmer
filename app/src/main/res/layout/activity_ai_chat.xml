<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Header -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:title="AI Coach "
        app:titleTextAppearance="@style/TextAppearance.App.Title"
        app:titleTextColor="@color/dark_grey" />

    <!-- Conversation Area -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/typingIndicator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_chat_received"/>

    <!-- Typing Indicator -->
    <LinearLayout
        android:id="@+id/typingIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="8dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/suggestionChips"
        app:layout_constraintStart_toStartOf="parent">

<!--        <com.airbnb.lottie.LottieAnimationView-->
<!--            android:layout_width="40dp"-->
<!--            android:layout_height="20dp"-->
<!--            app:lottie_rawRes="@raw/onboarding_1"-->
<!--            app:lottie_autoPlay="true"-->
<!--            app:lottie_loop="true"-->
<!--            app:lottie_scale="0.5" />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="gilroy_regular"
            android:text="AI is thinking..."
            android:textColor="@color/grey"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Quick Suggestions -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/suggestionChips"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        app:layout_constraintBottom_toTopOf="@id/inputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">



        <com.google.android.material.chip.Chip
                style="@style/Widget.App.SuggestionChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/suggestion_motivate" />

            <com.google.android.material.chip.Chip
                style="@style/Widget.App.SuggestionChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/suggestion_feel_low" />

            <com.google.android.material.chip.Chip
                style="@style/Widget.App.SuggestionChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/suggestion_give_tip" />

     </com.google.android.material.chip.ChipGroup>

    <!-- Input Area -->
    <!--
        Parent Layout (जैसे ConstraintLayout) के अंदर इस कोड को रखें।
        इस CardView को Parent Layout के नीचे से कंस्ट्रेंट किया गया है,
        ताकि यह हमेशा स्क्रीन के बॉटम में रहे।
    -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/inputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

         <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">

            <EditText
                android:id="@+id/etMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@android:color/transparent"
                android:hint="Ask me anything..."
                android:inputType="textCapSentences|textMultiLine"
                android:maxLines="5"
                android:minHeight="48dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnSend"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSend"
                style="?attr/materialIconButtonFilledStyle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Send Message"
                app:icon="@drawable/ic_send"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>