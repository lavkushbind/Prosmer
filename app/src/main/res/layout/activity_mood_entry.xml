<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp"
    tools:context=".MoodEntryActivity">

    <!-- Weekly Mood Chart -->
    <TextView
        android:id="@+id/tvWeeklyMoodHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Week at a Glance"
        android:textColor="@color/dark_grey"
        android:textSize="24sp"
        android:textStyle="bold"
        android:letterSpacing="0.03"
        tools:lineHeight="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:fontFamily="gilroy" /> <!-- Assuming Gilroy Bold -->

    <LinearLayout
        android:id="@+id/moodChartContainer"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:baselineAligned="false"
        android:gravity="bottom"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvWeeklyMoodHeader">
        <!-- Style for Mood Bars -->
        <View android:layout_width="0dp" android:layout_height="20dp" android:layout_weight="1" android:background="@color/light_blue" android:layout_marginHorizontal="2dp"/>
        <View android:layout_width="0dp" android:layout_height="80dp" android:layout_weight="1" android:background="@color/light_blue" android:layout_marginHorizontal="2dp"/>
        <View android:layout_width="0dp" android:layout_height="60dp" android:layout_weight="1" android:background="@color/light_blue" android:layout_marginHorizontal="2dp"/>
        <View android:layout_width="0dp" android:layout_height="100dp" android:layout_weight="1" android:background="@color/light_blue" android:layout_marginHorizontal="2dp"/>
        <View android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:background="@color/light_blue" android:layout_marginHorizontal="2dp"/>
        <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1" android:background="@color/light_blue" android:layout_marginHorizontal="2dp"/>
        <View android:layout_width="0dp" android:layout_height="90dp" android:layout_weight="1" android:background="@color/light_blue" android:layout_marginHorizontal="2dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/moodChartLabels"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/moodChartContainer">
        <!-- Style for Day Labels -->
        <TextView android:text="M" style="@style/DayLabel" />
        <TextView android:text="T" style="@style/DayLabel" />
        <TextView android:text="W" style="@style/DayLabel" />
        <TextView android:text="T" style="@style/DayLabel" />
        <TextView android:text="F" style="@style/DayLabel" />
        <TextView android:text="S" style="@style/DayLabel" />
        <TextView android:text="S" style="@style/DayLabel" />
    </LinearLayout>

    <!-- Main Content Group -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@id/btnSaveMood"
        app:layout_constraintTop_toBottomOf="@id/moodChartLabels"
        app:layout_constraintVertical_bias="0.5">

        <!-- Emoji Selector -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How are you feeling now?"
            style="@style/SectionHeader" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <ImageView android:id="@+id/moodHappy" style="@style/MoodEmoji" android:tag="Happy" android:src="@drawable/happiness" />
            <ImageView android:id="@+id/moodNeutral" style="@style/MoodEmoji" android:tag="Neutral" android:src="@drawable/neutral" />
            <ImageView android:id="@+id/moodSad" style="@style/MoodEmoji" android:tag="Sad" android:src="@drawable/sad" />
        </LinearLayout>

        <!-- Intensity Scale -->
        <TextView android:id="@+id/tvIntensityLabel"
            style="@style/SectionHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            tools:text="Intensity: 3" />
        <SeekBar
            android:id="@+id/seekBarIntensity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="8dp"
            android:max="4"
            android:progress="2"
            android:progressTint="@color/primary"
            android:thumbTint="@color/primary"
            android:progressBackgroundTint="@color/light_grey" />

        <!-- Quick Tags -->
        <TextView
            style="@style/SectionHeader"
            android:layout_marginTop="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add some tags" />
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupTags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:chipSpacingHorizontal="8dp">

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TagChip"
                android:text="Tired" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TagChip"
                android:text="Motivated" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TagChip"
                android:text="Grateful" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TagChip"
                android:text="Anxious" />

        </com.google.android.material.chip.ChipGroup>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSaveMood"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Save Mood"
        android:paddingVertical="14dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:letterSpacing="0.03"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:backgroundTint="@color/primary"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:fontFamily="gilroy"/>

</androidx.constraintlayout.widget.ConstraintLayout>