<?xml version="1.0" encoding="utf-8"?>
<resources>
     <style name="EditTextCursorColor" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="colorControlActivated">@color/text_primary</item>
    </style>

        <!-- Style for the main question titles -->
        <style name="OnboardingQuestionTitle" parent="Widget.AppCompat.TextView">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_marginTop">48dp</item>
            <item name="android:fontFamily">sans-serif-medium</item>
            <item name="android:textColor">#011423</item>
            <item name="android:textSize">18sp</item>
        </style>

        <!-- Style for the mood selection radio buttons -->
        <style name="MoodRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
            <item name="android:layout_width">0dp</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_weight">1</item>
            <item name="android:background">@drawable/mood_selector_bg</item>
            <item name="android:button">@android:color/transparent</item>
            <item name="android:gravity">center</item>
            <item name="android:paddingVertical">18dp</item>
            <item name="android:textColor">@color/mood_selector_text</item>
            <item name="android:textSize">14sp</item>
            <item name="android:lineSpacingMultiplier">1.2</item>
        </style>

        <!-- Style for the premium energy level slider -->
        <style name="PremiumSlider" parent="Widget.MaterialComponents.Slider">
            <item name="thumbColor">#011423</item>
            <item name="thumbElevation">4dp</item>
            <item name="thumbRadius">10dp</item>
            <item name="tickColor">@android:color/transparent</item>
            <item name="tickColorActive">#FFFFFF</item>
            <item name="tickColorInactive">#011423</item>
            <item name="tickVisible">true</item>
            <item name="trackColorActive">#011423</item>
            <item name="trackColorInactive">#E3DFFD</item>
            <item name="trackHeight">8dp</item>

        </style>

        <!-- Style for the selectable focus area chips -->
        <style name="FocusChip" parent="Widget.MaterialComponents.Chip.Filter">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
        
            <item name="chipStrokeColor">#D1C4E9</item>
            <item name="chipStrokeWidth">1dp</item>
            <item name="chipCornerRadius">24dp</item>
            <item name="android:paddingHorizontal">16dp</item>
            <item name="android:paddingVertical">12dp</item>
            <item name="android:textSize">14sp</item>
            <item name="android:fontFamily">sans-serif</item>
        </style>

</resources>