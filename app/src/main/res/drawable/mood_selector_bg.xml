<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when checked -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#E3DFFD" /> <!-- A slightly more saturated lavender for selection -->
            <corners android:radius="16dp" />
            <stroke android:width="1.5dp" android:color="#673AB7" />
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F3F0FE" /> <!-- Very light lavender background -->
            <corners android:radius="16dp" />
        </shape>
    </item>
</selector>